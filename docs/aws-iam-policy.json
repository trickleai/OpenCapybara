{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowS3UploadForCapybaraReleases",
      "Effect": "Allow",
      "Action": [
        "s3:PutObject",
        "s3:PutObjectAcl",
        "s3:GetObject"
      ],
      "Resource": [
        "arn:aws:s3:::YOUR-BUCKET-NAME/releases/*"
      ]
    },
    {
      "Sid": "AllowListBucket",
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::YOUR-BUCKET-NAME"
      ],
      "Condition": {
        "StringLike": {
          "s3:prefix": [
            "releases/*"
          ]
        }
      }
    }
  ]
}
